{
  "private": true,
  "name": "junin-ui",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,md,scss}\"",
    "test": "turbo test",
    "test:cov": "turbo test:cov",
    "changeset": "npx changeset",
    "version-packages": "npx changeset version",
    "test:watch": "turbo run test:watch"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Saulo Santana",
  "dependencies": {
    "turbo": "^1.12.4"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  }
}
